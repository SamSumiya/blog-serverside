<h5>Dashboard</h5>

<h3>Welcome {{name}}</h3>
<p>Here are your blogs</p>

{{#if blogs}}
  <table class='striped'>
    <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each blogs}}
        <tr>
          <td><a href='/api/v1/blogs/{{blog._id}}'>{{title}}</a></td>
          <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
          <td><span class='dash-status'>{{status}}</span></td>
          <td>
            <a href='/api/v1/blogs/edit/{{_id}}' class='btn btn-float'>
              <i class='fas fa-edit fa-small'></i></a>
            <form
              action='/api/v1/blogs/{{_id}}'
              method='POST'
              id='delete-form'
            >
              <input type='hidden' name='_method' value='DELETE' />
              <button class='btn red' type='submit'  class='btn btn-float'>
                <i class='fas fa-trash fa-small'></i></button>

            </form>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p>You have not create any blog...</p>
{{/if}}