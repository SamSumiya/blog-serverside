<h2>Edit</h2>
<div class="row">
  <form action="/api/v1/blogs" method="POST" class="col s12">
    <div class="row">
      <div class="input-field">
        <input type="text" id="title" name="title" value="{{blog.title}}">
        <label for="title">Title</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        <select name="status" id="status">
          {{#select blog.status}}
          <option value="public" selected>Public</option>
          <option value="private">Private</option> 
          {{/select}}
        </select>
        <label for="status">Status</label> 
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        <h4>Edit blog</h4>
        <textarea name="body" id="body" cols="30" rows="10">{{blog.body}}</textarea>
      </div>
    </div>

    <div class="row">
      <input type="submit" value="Save" class="btn">
      <a href="/api/v1/dashboard" class="btn orange">Cancel</a>
    </div>
  </form>
</div>


